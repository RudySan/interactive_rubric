					{if
						(document.FA.A3.checked == true)

						{document.FA.A2.checked = false;
						document.FA.A1.checked = false;
						document.FA.A0.checked = false;

						var elem = document.getElementById("textChangeA")
						elem.innerHTML = "3"}
					} 

